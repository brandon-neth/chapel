MIMALLOC_DIR=$(THIRD_PARTY_DIR)/mimalloc
MIMALLOC_SUBDIR = $(MIMALLOC_DIR)/mimalloc-src
MIMALLOC_BUILD_SUBDIR=build/$(CHPL_MAKE_TARGET_MIMALLOC_UNIQ_CFG_PATH)
MIMALLOC_BUILD_DIR=$(MIMALLOC_DIR)/$(MIMALLOC_BUILD_SUBDIR)
MIMALLOC_INSTALL_SUBDIR=install/$(CHPL_MAKE_TARGET_MIMALLOC_UNIQ_CFG_PATH)
MIMALLOC_INSTALL_DIR=$(MIMALLOC_DIR)/$(MIMALLOC_INSTALL_SUBDIR)
MIMALLOC_INCLUDE_DIR = $(MIMALLOC_INSTALL_DIR)/include
MIMALLOC_LIB_DIR = $(MIMALLOC_INSTALL_DIR)/lib
MIMALLOC_BIN_DIR = $(MIMALLOC_INSTALL_DIR)/bin
MIMALLOC_TARGET = --target

CHPL_MIMALLOC_PREFIX=$(CHPL_MIMALLOC_TARGET_PREFIX)
